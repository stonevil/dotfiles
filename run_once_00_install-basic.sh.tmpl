#!/usr/bin/env sh

cd "$HOME" || exit 1

{{ if eq .chezmoi.os "darwin" -}}
if [ -d "$HOME"/.homebrew ]; then
	rm -Rf "$HOME"/.homebrew
fi
git clone https://github.com/Homebrew/brew.git "$HOME"/.homebrew
export PATH="$HOME"/.homebrew/bin:$PATH
brew update && brew upgrade && brew upgrade --cask
{{ end -}}
