{{- /*
vim:ft=bash.gotexttmpl
*/ -}}

{{- if eq .chezmoi.os "darwin" }}
export PATH={{ .path.homebrew | quote }}/sbin:{{ .path.homebrew | quote }}/bin:"$PATH"
export MANPATH="{{ .path.homebrew | quote }}/share/man":"$MANPATH"

export HOMEBREW_CASK_OPTS="--appdir={{ (joinPath .chezmoi.homeDir "Applications") }}"

[ -d {{ .path.homebrew | quote }}/Cellar/ruby ] && export PATH={{ .path.homebrew | quote }}/Cellar/ruby/$(ls {{ .path.homebrew }}/Cellar/ruby | tail -n 1)/bin:"$PATH"
{{ end }}

{{- if stat (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf") }}
export XTENSA_PATH={{ (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf") | quote }}
export PATH="$PATH":{{ (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf/bin") | quote }}
{{ end }}

{{- if stat (joinPath .chezmoi.homeDir ".local/esp-idf") | quote }}
export IDF_PATH={{ (joinPath .chezmoi.homeDir ".local/esp-idf") | quote }}
{{ end }}

{{- if stat (joinPath .chezmoi.homeDir ".local/krew") }}
export KREW_ROOT={{ (joinPath .chezmoi.homeDir ".local/krew") | quote }}
export PATH={{ (joinPath .chezmoi.homeDir ".local/krew/bin") | quote }}:{{ (joinPath .chezmoi.homeDir ".local/bin") | quote }}:"$PATH"
{{ end }}

{{- if stat (joinPath .chezmoi.homeDir ".cargo") }}
export PATH={{ (joinPath .chezmoi.homeDir ".cargo/bin") | quote }}:"$PATH"
{{- end }}

export PATH={{ (joinPath .chezmoi.homeDir ".local/bin") | quote }}:"$PATH"