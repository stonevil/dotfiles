{{- /*
vim:ft=bash.gotexttmpl
*/ -}}

export PATH={{ if stat (joinPath .chezmoi.homeDir ".cargo") }}{{ (joinPath .chezmoi.homeDir ".cargo/bin") | quote }}:{{ end }}{{ (joinPath .chezmoi.homeDir ".local/bin") | quote }}{{ if eq .chezmoi.os "darwin" }}{{ if stat (joinPath .path.homebrew "Cellar/ruby") }}:{{ (joinPath ((glob (print $.path.homebrew "/Cellar/ruby/*")) | last ) "bin") | quote }}{{ end }}:{{ (joinPath .path.homebrew "sbin") | quote }}:{{ (joinPath .path.homebrew "bin") | quote }}{{ end }}:"$PATH"

{{ if eq .chezmoi.os "darwin" }}
export MANPATH={{ (joinPath .path.homebrew "share/man") | quote }}:"$MANPATH"
{{ end }}

export HOMEBREW_CASK_OPTS="--appdir={{ (joinPath .chezmoi.homeDir "Applications") }}"

{{- if stat (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf") }}
export XTENSA_PATH={{ (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf") | quote }}
export PATH="$PATH":{{ (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf/bin") | quote }}
{{ end }}

{{- if stat (joinPath .chezmoi.homeDir ".local/esp-idf") | quote }}
export IDF_PATH={{ (joinPath .chezmoi.homeDir ".local/esp-idf") | quote }}
{{ end }}

{{ if stat (joinPath .chezmoi.homeDir ".local/krew") }}
export KREW_ROOT={{ (joinPath .chezmoi.homeDir ".local/krew") | quote }}
export PATH={{ (joinPath .chezmoi.homeDir ".local/krew/bin") | quote }}:"$PATH"
{{- end }}
