{{ if lookPath "limactl" }}
# lima-vm to support genuine docker
alias dk='limactl shell docker docker'
alias docker='limactl shell docker docker'
alias dk_stop_all='dk stop $(dk ps -a -q)'
alias dk_rm_all='dk rm -f $(dk ps -a -q)'
alias dk_rmi_all='dk rmi -f $(dk images --no-trunc=false -a -q)'

# lima-vm to support genuine podman
alias pa='limactl shell podman-arm64 podman'
alias pa_stop_all='pa stop $(pa ps -a -q)'
alias pa_rm_all='pa rm -f $(pa ps -a -q)'
alias pa_rmi_all='pa rmi -f $(pa images --no-trunc=false -a -q)'

# lima-vm to support genuine podman
alias pi='limactl shell podman-amd64 podman'
alias pi_stop_all='pi stop $(pi ps -a -q)'
alias pi_rm_all='pi rm -f $(pi ps -a -q)'
alias pi_rmi_all='pi rmi -f $(pi images --no-trunc=false -a -q)'

# lima-vm to support genuine nerdctl
alias ntl='limactl shell nerdy nerdctl'
alias nctl_stop_all='nctl stop $(nctl ps -a -q)'
alias nctl_rm_all='nctl rm -f $(nctl ps -a -q)'
alias nctl_rmi_all='nctl rmi -f $(nctl images --no-trunc=false -a -q)'
{{ end -}}

