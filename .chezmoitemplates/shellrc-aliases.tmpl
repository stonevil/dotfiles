alias tfd='terraform-docs markdown table --output-file README.md --output-mode inject .'
{{ end -}}

{{ if lookPath "limactl" }}
# lima-vm to support genuine docker
alias dk='limactl shell docker docker'
alias docker='limactl shell docker docker'
alias dk-stop-all='dk stop $(dk ps -a -q)'
alias dk-rm-all='dk rm -f $(dk ps -a -q)'
alias dk-rmi-all='dk rmi -f $(dk images --no-trunc=false -a -q)'

# lima-vm to support genuine podman
alias pa='limactl shell podman podman'
alias pa-stop-all='pa stop $(pa ps -a -q)'
alias pa-rm-all='pa rm -f $(pa ps -a -q)'
alias pa-rmi-all='pa rmi -f $(pa images --no-trunc=false -a -q)'

# lima-vm to support genuine podman
alias pi='limactl shell podman-intel podman'
alias podman-intel='limactl shell podman-intel podman'
alias pi-stop-all='pi stop $(pi ps -a -q)'
alias pi-rm-all='pi rm -f $(pi ps -a -q)'
alias pi-rmi-all='pi rmi -f $(pi images --no-trunc=false -a -q)'

# lima-vm to support genuine nerdctl
alias nerdctl='limactl shell nerdy nerdctl'
alias nerdctl-stop-all='nerdctl stop $(nerdctl ps -a -q)'
alias nerdctl-rm-all='nerdctl rm -f $(nerdctl ps -a -q)'
alias nerdctl-rmi-all='nerdctl rmi -f $(nerdctl images --no-trunc=false -a -q)'
{{ end -}}

