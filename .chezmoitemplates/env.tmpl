{{- /*
vim:ft=bash.gotexttmpl
*/ -}}

# UTF-8 everywhere
export LANG=en_US.UTF-8
export LANGUAGE=en_US:en
export LC_TIME=en_US.UTF-8
export LC_COLLATE=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LC_MEASUREMENT=metric

# Enforce colour
export CLICOLOR=1
export MANPAGER="less -R --tabs={{ .terminal.tabs }} --use-color -Dd+r -Du+b"

# Set tab widht
export PAGER="less -R --tabs={{ .terminal.tabs }}"
{{ if eq .chezmoi.os "darwin" }}
# Tabs width disabled for macOS. For unnknown yet reason tab width less than 6 messing up du and other cli outputs on macOS.
{{ else -}}
tabs {{ .terminal.tabs }}
{{ end -}}

{{ if eq .chezmoi.os "darwin" }}
export BROWSER="open -a Safari"
{{ else -}}
# TODO: add option to choose browser
export BROWSER="waterfox"
{{ end -}}

# chezmoi useful aliases and functions
function cm() {
	chezmoi execute-template < "$@" | more
}
function cx() {
	chezmoi execute-template < "$@" | bash -x -
}
alias ct='chezmoi execute-template <'
alias ci='chezmoi init'
alias ca='chezmoi apply --force'
alias ce='chezmoi apply -R'
alias creset='chezmoi state reset'

{{- $p_list := list ((joinPath .chezmoi.homeDir ".local/bin") | quote) }}

{{ if eq .chezmoi.os "darwin" }}
# macOS configs
export HOMEBREW_CASK_OPTS="--appdir={{ (joinPath .chezmoi.homeDir "Applications") | quote }} --no-quarantine"
export HOMEBREW_PREFIX={{ .path.homebrew | quote }}
export HOMEBREW_CELLAR={{ (joinPath .path.homebrew "Cellar") | quote }}
export HOMEBREW_REPOSITORY={{ .path.homebrew | quote }}
export HOMEBREW_CASK_OPTS="--appdir={{ (joinPath .chezmoi.homeDir "Applications") }}"

{{- if stat (joinPath .path.homebrew "Cellar/ruby") }}
		{{ $p_list = append $p_list ((joinPath ((glob (print $.path.homebrew "/Cellar/ruby/*")) | last ) "bin") | quote) }}
	{{- end }}
	{{- $p_list = append $p_list ((joinPath .path.homebrew "sbin") | quote) }}
	{{- $p_list = append $p_list ((joinPath .path.homebrew "bin") | quote) }}

alias brew_install='{{ joinPath .path.homebrew "bin/brew" }} install --overwrite --force'
alias brew_upgrade='{{ joinPath .path.homebrew "bin/brew" }} update && {{ joinPath .path.homebrew "bin/brew" }} upgrade --overwrite && {{ joinPath .path.homebrew "bin/brew" }} upgrade --cask && {{ joinPath .path.homebrew "bin/brew" }} cleanup --quiet --prune=120 && {{ joinPath .path.homebrew "bin/brew" }} autoremove'
alias brew_cleanup='{{ joinPath .path.homebrew "bin/brew" }} cleanup --quiet --prune=120 && {{ joinPath .path.homebrew "bin/brew" }} autoremove'
{{ end -}}

{{- if stat (joinPath .chezmoi.homeDir ".local/krew") }}
	{{ $p_list = append $p_list ((joinPath .chezmoi.homeDir ".local/krew/bin") | quote) }}
{{ end -}}
export PATH={{ join ":" ($p_list | compact | uniq) }}:$PATH

{{ if eq .chezmoi.os "linux" }}
	{{ if eq .chezmoi.osRelease.id "arch" }}
# ArchLinux configs
alias yay_install='yay --noconfirm --needed --sync'
alias yay_upgrade='yay --noconfirm --needed --sync --refresh --sysupgrade'
alias yay_cleanup='l=$(yay --query --quiet --deps --unrequired); if [[ -n $l ]]; then yay --noconfirm --remove --nosave --recursive $l; fi'
alias yay_remove='yay --noconfirm --remove --recursive'
	{{ end -}}
	{{ if eq .chezmoi.osRelease.id "fedora" }}
# Fedora configs
alias dnf_install='sudo dnf install -y'
alias dnf_upgrade='sudo dnf upgrade -y'
alias dnf_cleanup='sudo dnf autoremove -y'
	{{ end }}
{{ end }}

{{ if .tags.neovimCli.enabled }}
alias nvim_plugins_update='nvim --headless "+Lazy! sync" +qall!; nvim --headless "+Lazy! sync" +TSUpdate +qall!; nvim --headless +TSUpdate +qall!'
{{ end }}

{{ if .tags.terminalMultiplexer.enabled }}
alias tmux_plugins_update='if [[ -d {{ (joinPath .chezmoi.homeDir ".config/tmux/plugins") | quote }} ]]; then for plugin in {{ joinPath .chezmoi.homeDir ".config/tmux/plugins" }}*; do if [[ -d "$plugin" ]]; then cd "$plugin"; if [[ -d '.git' ]]; then git pull; fi; fi; done; fi'
{{ end }}

{{ if .tags.devCli.enabled }}
alias bat_cache_update='if command -v bat >/dev/null 2>&1; then bat cache --build; fi'
{{ end }}

{{ if .tags.rust.enabled }}
export BINSTALL_DISABLE_TELEMETRY=false
alias cargo_install='cargo binstall --no-confirm --disable-telemetry --force --install-path {{ joinPath .chezmoi.homeDir ".local/bin"  | quote }}'
{{ end -}}

{{ if .tags.go.enabled }}
export GOPATH={{ (joinPath .chezmoi.homeDir ".local/golang-packages") | quote }}
export GOBIN={{ (joinPath .chezmoi.homeDir ".local/bin") | quote }}
alias go_install='go install'
{{ end -}}

{{ if .tags.python3.enabled }}
export PYTHON_KEYRING_BACKEND="keyring.backends.null.Keyring"

	{{ if (eq .chezmoi.os "darwin") }}
function python3_relink() {
	local python3_path=$(ls -d {{ print .path.homebrew "/Cellar/python@*/*/Frameworks/Python.framework/Versions/*/bin/" }} | tail -n 1)
	if [[ -n $python3_path ]]; then
		ln -sf $python3_path/python3.?? {{ joinPath .path.homebrew "bin/python3" | quote }}
		ln -sf $python3_path/python3.??-config {{ joinPath .path.homebrew "bin/python3-config" | quote }}
		ln -sf $python3_path/pydoc3.?? {{ joinPath .path.homebrew "bin/pydoc3" | quote }}
		ln -sf $python3_path/pip3.?? {{ joinPath .path.homebrew "bin/pip3" | quote }}
		ln -sf $python3_path/idle3.?? {{ joinPath .path.homebrew "bin/idle3" | quote }}
		ln -sf $python3_path/wheel3.?? {{ joinPath .path.homebrew "bin/wheel3" | quote }}
	fi
}
alias pip_install='python3 -m pip install --no-warn-script-location --disable-pip-version-check --no-cache-dir --upgrade --use-pep517 --force-reinstall --ignore-installed'
	{{ else }}
alias pip_install='python3 -m pip install --no-warn-script-location --disable-pip-version-check --no-cache-dir --upgrade --use-pep517 --force-reinstall --ignore-installed --user'
	{{ end }}
alias pipx_install='pipx install --include-deps --force'
alias pipx_upgrade='if command -v pipx >/dev/null 2>&1; then pipx upgrade-all --force; fi'
alias uv_install='uv tool install --force --upgrade'
alias uv_upgrade='if command -v uv >/dev/null 2>&1; then uv tool upgrade --all; fi'
{{ end }}

{{ if .tags.nodejs.enabled }}
export NPM_PACKAGES={{ (joinPath .chezmoi.homeDir ".local") | quote }}
alias npm_install='npm install -g'
alias npm_update_self='if command -v npm >/dev/null 2>&1; then npm install -g npm@latest; fi'
alias npm_update='if command -v npm >/dev/null 2>&1; then npm update -g; fi'
{{ end }}

{{ if .tags.lua.enabled }}
#TODO: add command to update all installed rocks. luarocks list and pass through output with luarocks install <package_name>
	{{ if eq .chezmoi.os "darwin" }}
alias rocks_install='luarocks install --force'
	{{ else }}
alias rocks_install='luarocks --local install --force'
	{{ end }}
{{ end }}

{{ if .tags.ruby.enabled }}
export GEM_HOME={{ (joinPath .chezmoi.homeDir ".local/gem-packages") | quote }}
alias gem_install='gem install --no-suggestions --no-lock --no-document --env-shebang --bindir {{ (joinPath .chezmoi.homeDir ".local/bin") | quote }}'
alias gem_cleanup='if command -v gem >/dev/null 2>&1; then gem cleanup; fi'
alias gem_upgrade='if command -v gem >/dev/null 2>&1; then gem update; fi'
{{ end }}

{{ if .tags.k8sCli.enabled }}
export KREW_ROOT={{ (joinPath .chezmoi.homeDir ".local/krew") | quote }}
alias krew_install='kubectl-krew install'
alias krew_upgrade='if command -v kubectl-krew >/dev/null 2>&1; then kubectl-krew update && kubectl-krew upgrade; fi'
{{ end }}

{{ if .tags.espCli.enabled }}
export IDF_TOOLS_PATH={{ (joinPath .chezmoi.homeDir ".local/esp-idf") | quote }}
export XTENSA_PATH={{ (joinPath .chezmoi.homeDir ".local/xtensa-esp32-elf") | quote }}
alias esp_idf_env='. {{ (joinPath .chezmoi.homeDir ".local/esp-idf/export.sh") | quote }}'
alias esp_idf_update='if [[ -d {{ (joinPath .chezmoi.homeDir ".local/esp-idf") | quote }} ]]; then cd {{ (joinPath .chezmoi.homeDir ".local/esp-idf") | squote }} && ./install.sh all; fi'
{{ end }}

{{ if .tags.hashicorpCli.enabled }}
export PACKER_CACHE_DIR={{ (joinPath .chezmoi.homeDir ".packer.d/cache") | quote }}
export PACKER_ISO_DIR={{ (joinPath .chezmoi.homeDir ".packer.d/iso") | quote }}
export PACKER_BOX_DIR={{ (joinPath .chezmoi.homeDir ".packer.d/box") | quote }}
export PACKER_LOG_PATH={{ (joinPath .chezmoi.homeDir ".packer.d/log") | quote }}
{{ end }}

{{ if .tags.media.enabled }}
	{{ if eq .chezmoi.os "darwin" }}
export MEDIAPLAYER="{{ (joinPath .chezmoi.homeDir "Applications/mpv.app/Contents/MacOS/mpv") }} --terminal=no --mute=no"
	{{ else }}
export MEDIAPLAYER="mpv --terminal=no --mute=no"
	{{ end }}
{{ end }}

{{ if or (.tags.devCli.enabled) (.tags.dev.enabled) }}
# Stop M$ from spying on you
export AZURE_CORE_COLLECT_TELEMETRY=FALSE
export AZURE_LOGGING_ENABLE_LOG_FILE=FALSE
{{ end }}

{{ if .tags.adsCli.enabled }}
alias hblock_update='if command -v hblock >/dev/null 2>&1; then hblock --color auto; fi'
{{ end }}

{{ if .tags.vagrantCli.enabled }}
export VAGRANT_PROVIDER_GUI="false"
alias vagrant_install='vagrant plugin install'
alias vagrant_plugins_update='if command -v vagrant >/dev/null 2>&1; then vagrant plugin update; fi'
function vagrant_ip() {
	vagrant ssh -c "ip address show eth0 | grep 'inet ' | sed -e 's/^.*inet //' -e 's/\/.*$//'"
}
{{ end }}

{{ if .tags.fonts.enabled }}
alias fonts_cache_update='if command -v fc-cache >/dev/null 2>&1; then fc-cache -f -v; fi'
{{ end }}
