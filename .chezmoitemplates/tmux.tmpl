{{ template "path.tmpl" . }}

if command -v tmux >/dev/null 2>&1; then
	echo "TMUX. Update plugins"
	{{ if stat (joinPath .chezmoi.homeDir ".tmux/plugins") }}
		for plugin in "$HOME"/.tmux/plugins/*; do
			if [ -d "$plugin" ]; then
				cd "$plugin" || exit
				if [ -d '.git' ]; then
					git pull
				fi
			fi
		done
		if tmux info &> /dev/null; then
			tmux source-file "$HOME"/.config/tmux/tmux.conf
		fi
	{{ end }}
fi
