{{- /*
vim:ft=bash.gotexttmpl
*/ -}}

{{ template "env.tmpl" . }}

{{ range $_, $v := $.tags -}}
	{{ if $v.enabled -}}
		{{ if index $v "upgrade" -}}
			{{ if index $v.upgrade "arch" -}}
				{{ if $v.upgrade.arch -}}
					{{ range $cmd := $v.upgrade.arch -}}
						{{ $cmd }} || exit 1
					{{ end -}}
				{{ end -}}
			{{ end -}}
		{{ end -}}
	{{ end -}}
{{ end -}}
