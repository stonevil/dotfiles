{{- /*
vim:ft=bash.gotexttmpl
*/ -}}

{{- if lookPath "nvim" }}
export EDITOR="$(command -v nvim)"
{{ else if lookPath "vim" }}
export EDITOR="$(command -v vim)"
{{ else }}
export EDITOR="$(command -v vi)"
{{ end }}

# ENV Variables
export GIT_EDITOR=$EDITOR
export VISUAL=$EDITOR

# Aliases
alias v='$EDITOR'
alias vi='$EDITOR'
alias vim='$EDITOR'
alias vimdiff='$EDITOR -d'
