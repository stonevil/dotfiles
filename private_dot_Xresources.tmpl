! UTF-8 by default
*xterm.utf8: 1

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
*xterm*loginShell: true

! Lot of scrollback
*xterm*saveLines: 10000

! Scrollbar
*xterm*scrollBar: false
*xterm*rightScrollBar: true

! Scroll down anytime you press a key
*xterm*scrollKey: true

! Disable fullscreen toggle which can conflict with Midnight Commander feature
*xterm*fullscreen: never

! Copy between xterm and other programs/documents
*xterm.selectToClipboard: true
*xterm.highlightSelection: true
*xterm.trimSelection: true

! Stop output to terminal from jumping down to bottom of scroll again
*xterm*scrollTtyOutput: false

*xterm.termName: xterm-256color
*xterm.vt100.TiteInhibit: True
*xterm.vt100.geometry: {{ if .tags.thinkpad.enabled }}{{ if ge (20 | sub .env.cols) 10 }}{{ 20 | sub .env.cols }}{{ else }}{{ .env.cols }}{{ end }}{{ else }}{{ .env.cols }}{{ end }}x{{ if .tags.thinkpad.enabled }}{{ if ge (5 | sub .env.rows) 10 }}{{ 5 | sub .env.rows }}{{ else }}{{ .env.rows }}{{ end }}{{ else }}{{ .env.rows }}{{ end }}

*xterm*faceName: {{ .env.font }} ! xft:monospace
*xterm*faceSize: {{ if or (.tags.zephyrus.enabled) (.tags.thinkpad.enabled) }}{{ if ge (4 | sub .env.fontSize) 10 }}{{ 4 | sub .env.fontSize }}{{ else }}{{ .env.fontSize }}{{ end }}{{ else }}{{ .env.fontSize }}{{ end }}

! Copy / Paste bindings
*vt100*translations: #override \n\
	Shift <Key>Home: copy-selection(CLIPBOARD) \n\
	Shift <Key>Insert: copy-selection(CLIPBOARD) \n\
	Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
	Ctrl Shift <Key>V: insert-selection(CLIPBOARD)


! THEME
*background: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
*foreground: {{ print "#" .colours.normal.foreground }}
*cursorColor: {{ print "#" .colours.cursor.cursor }}
! black
*color0:  {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.black }}{{ end }}
*color8:  {{ print "#" .colours.bright.black }}
! red
*color1:  {{ print "#" .colours.normal.red }}
*color9:  {{ print "#" .colours.bright.red }}
! green
*color2:  {{ print "#" .colours.normal.green }}
*color10: {{ print "#" .colours.bright.green }}
! yellow
*color3:  {{ print "#" .colours.normal.yellow }}
*color11: {{ print "#" .colours.bright.yellow }}
! blue
*color4:  {{ print "#" .colours.normal.blue }}
*color12: {{ print "#" .colours.bright.blue }}
! magenta
*color5:  {{ print "#" .colours.normal.magenta }}
*color13: {{ print "#" .colours.bright.magenta }}
! cyan
*color6:  {{ print "#" .colours.normal.cyan }}
*color14: {{ print "#" .colours.bright.cyan }}
! white
*color7:  {{ print "#" .colours.normal.white }}
*color15: {{ print "#" .colours.bright.white }}
