log_level = "error"
outputs = { Targets = ["eDP-1"] }
position = "Bottom"

app_launcher_cmd = "walker"

[settings]
lock_cmd = "playerctl --all-players pause; hyprlock &"


[modules]
left = [[ "Workspaces" ], [ "WindowTitle" ]]
center = [ "MediaPlayer" ]
right = [[ "Tray" ], [ "SystemInfo" ], [ "Privacy" ], [ "Clock", "Settings" ]]

[workspaces]
visibility_mode = "All"
max_workspaces = 10

[window_title]
mode = "Title"
truncate_title_after_length = 50

[media_player]
max_title_length = 50

[system_info]
indicators = [ "Cpu", "Memory", "Temperature" ]

# Theme
[appearance]
font_name = "JetBrainsMono NFP"
scale_factor = 1.0
opacity = {{ if ge (float64 (0.5 | sub .env.opacityInactive)) 0.1 }}{{ (0.5 | sub .env.opacityInactive) }}{{ else }}0.1{{ end }}

style = "Islands"

success_color = {{ (print "#" .colours.normal.green) | quote }}
text_color = {{ (print "#" .colours.normal.text) | quote }}

workspace_colors = [ {{ (print "#" .colours.normal.indexed_colors.color16) | quote }}, {{ (print "#" .colours.normal.lavender) | quote }}, {{ (print "#" .colours.normal.mauve) | quote }} ]

[appearance.menu]
opacity = 0.5
backdrop = 0.3

[appearance.primary_color]
base = {{ (print "#" .colours.normal.peach) | quote }}
text = {{ (print "#" .colours.normal.mantle) | quote }}

[appearance.danger_color]
base = {{ (print "#" .colours.normal.red) | quote }}
weak = {{ (print "#" .colours.normal.yellow) | quote }}

[appearance.background_color]
base = {{ if .theme.blackout }}"#000000"{{ else }}{{ (print "#" .colours.normal.base) | quote }}{{ end }}
weak = {{ (print "#" .colours.normal.surface0) | quote }}
strong = {{ (print "#" .colours.normal.surface2) | quote }}

[appearance.secondary_color]
base = {{ if .theme.blackout }}"#000000"{{ else }}{{ (print "#" .colours.normal.crust) | quote }}{{ end }}
strong = {{ (print "#" .colours.normal.surface1) | quote }}
