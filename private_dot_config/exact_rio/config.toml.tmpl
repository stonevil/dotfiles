[navigation]
{{- if eq .chezmoi.os "linux" }}
mode = "Bookmark"
{{ else if eq .chezmoi.os "darwin" }}
mode = "NativeTab"
{{- end }}
clickable = true
hide-if-single = true
use-current-path = true
# color-automation = []
use-split = false
navigation.unfocused-split-opacity = 0.8

[shell]
program = "{{ .tui.shellPath }}"
args = ["--login"]

