---
env:
  TERM: xterm-256color
  COLORTERM: truecolor

window:
  dimensions: # Alacritty currently have some issues with window position. Window spawns off-screen
    columns: 120
    lines: 50

  position:
    x: 20
    y: 20

  padding:
    x: 5
    y: 5

  dynamic_padding: false

  opacity: {{ .gui.opacity }}

{{ if eq .chezmoi.os "linux" }}
  decorations: none
{{ else if eq .chezmoi.os "darwin" }}
  decorations: buttonless
{{- end }}
  # Values for `decorations`
  #   - full: Borders and title bar
  #   - none: Neither borders nor title bar
  # (macOS only):
  #   - transparent: Title bar, transparent background and title bar buttons
  #   - buttonless: Title bar, transparent background, but no title bar buttons

  startup_mode: Windowed
  # Values for `startup_mode`:
  #   - Windowed
  #   - Maximized
  #   - Fullscreen
  # Values for `startup_mode` (macOS only):
  #   - SimpleFullscreen

  title: Alacritty

  dynamic_title: true

{{- if eq .chezmoi.os "linux" }}
  class:
    instance: Alacritty
    general: Alacritty
{{- end }}

  decorations_theme_variant: Dark

  resize_increments: false

  option_as_alt: OnlyRight

scrolling:
  history: 10000
  multiplier: 3

font:
  normal:
    family: "{{ .gui.font }}"
    style: "Light"
  bold:
    style: "Light"
  italic:
    style: "Light Italic"
  size: {{ .gui.fontSize }}
  offset:
    x: 0
    y: 0
  glyph_offset:
    x: 0
    y: 0

  builtin_box_drawing: true

tabspaces: {{ .tui.tabs }}

draw_bold_text_with_bright_colors: false

schemes:
  darkfox: &darkfox
    primary:
      background: '0x000000'
      foreground: '0xcdcecf'
    normal:
      black: '0x000000'
      red: '0xbf616a'
      green: '0xa3be8c'
      yellow: '0xebcb8b'
      blue: '0x81a1c1'
      magenta: '0xb48ead'
      cyan: '0x88c0d0'
      white: '0xe5e9f0'
    bright:
      black: '0x000000'
      red: '0xd06f79'
      green: '0xb1d196'
      yellow: '0xf0d399'
      blue: '0x8cafd2'
      magenta: '0xc895bf'
      cyan: '0x93ccdc'
      white: '0xe7ecf4'
    indexed_colors:
      - {index: 16, color: '0xc9826b'}
      - {index: 17, color: '0xbf88bc'}

colors: *darkfox

bell:
  animation: EaseOutExpo
  duration: 100
  color: '0xcdcecf'
  command: None

selection:
  semantic_escape_chars: ",│`|:\"' ()[]{}<>\t"

save_to_clipboard: true

cursor:
  style:
    shape: Beam
    blinking: On
  vi_mode_style: Block
  blink_interval: 750
  blink_timeout: 5
  unfocused_hollow: true
  thickness: 0.15

live_config_reload: true

shell:
  program: {{ .tui.shellPath }}
  args:
    - --login

working_directory: {{ (joinPath .chezmoi.homeDir "Downloads") | quote }}

mouse:
  double_click: {threshold: 300}
  triple_click: {threshold: 300}
  hide_when_typing: false

mouse_bindings:
  - {mouse: Middle, action: PasteSelection}

key_bindings:
  - {key: V, mods: Control|Shift, action: Paste}
  - {key: C, mods: Control|Shift, action: Copy}
  - {key: Insert, mods: Shift, action: PasteSelection}

  - {key: Paste, action: Paste}
  - {key: Copy, action: Copy}
  - {key: L, mods: Control, action: ClearLogNotice}
  - {key: L, mods: Control, mode: ~Vi|~Search, chars: "\x0c"}
