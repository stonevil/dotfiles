{{- /*
	vim:ft=conf.gotexttmpl
*/ -}}

# Switch keyboard language
bindd = CTRL, SPACE, Switch keyboard language, exec, {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/lang" }}

# Lock screen
bindd = SUPER CTRL, Q, Lock the screen, exec, hyprlock # macOS alike
bindd = SUPER, L, Lock the screen, exec, hyprlock # Windows alike

# Screenshots
bindd = SUPER SHIFT, 3, Screenshot window, exec, hyprshot -m output # macOS alike
bindd = SUPER SHIFT, 4, Screenshot area, exec, hyprshot -m window
bindd = , PRINT, Screenshot window, exec, hyprshot -m window # Windows alike
bindd = SHIFT, PRINT, Screenshot area, exec, hyprshot -m region

# Logout
bindd = CTRL ALT, DELETE, Exit Hyprland, exec, hyprctl dispatch exit
