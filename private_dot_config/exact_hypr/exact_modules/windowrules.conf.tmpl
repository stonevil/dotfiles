{{- /*
	vim:ft=conf.gotexttmpl
*/ -}}

# ROG
windowrule {
	name = ROG
	match:class = ^(rog-control-center)$
	workspace = 7
	float = true
	center = true
}

# Browsers
windowrule {
	name = Browsers
	match:class = ^(librewolf|chromium)$
	workspace = 2
	float = true
	center = true
}

# MPV
windowrule {
	name = MPV
	match:class = ^(mpv)$
	float = true
	center = true
}

# Discord
windowrule {
	name = Discord
	match:class = ^(discord)$
	workspace = 3
}

# Terminal
windowrule {
	name = Terminals
	match:class = ^(Alacritty|foot|kitty|wezterm|com.mitchellh.ghostty)$
	opacity = 0.9
}

# Polkit
windowrule {
	name = Polkit
	match:class = (org.kde.polkit-kde-authentication-agent-1)
	float = true
	center = true
}

# Pavucontrol
windowrule {
	name = Pavucontrol
	match:class = pavucontrol
	center = true
	float = true
}

# KRDC
windowrule {
	name = KRDC
	match:class = (org.kde.krdc)
	workspace = 6
}

# KCalc
windowrule {
	name = KCalc
	match:class = (org.kde.kcalc)
	float = true
	opaque = true
	size = 235 333
}

# Plasma Open File dialog
windowrule {
	name = IMPL
	match:class = (org.freedesktop.impl.portal.desktop.kde)
	float = true
	center = true
}

# File pickers center floating
windowrule {
	name = FilePicker
	match:title = ^(Open File|Open|Open Source|Save|Import|Choose|Rename|Pick Files), class:^(.*)$
	center = true
	float = true
}

# Float class
windowrule {
	name = Float
	match:class = ^(floating)$
	float = true
}

# Ignore maximize requests from apps
windowrule {
	name = Maximise
	match:class = (.*)
	suppress_event = maximize
}

# Fix some dragging issues with Wayland
windowrule {
	name = Unfocus
	match:class = ^$
	match:title = ^$
	match:xwayland = true
	match:float = true
	match:fullscreen = false
	match:pin = false
	no_focus = true
}

# Thunderbird
windowrule {
	name = Thunderbird
	match:class = ^(org.mozilla.Thunderbird)$
	workspace = 4
}
windowrule {
	name = Thunderbird Float
	match:class = ^(org.mozilla.Thunderbird)$
	match:title = (Inbox.*|Msgcompose.*|Send.*|Write.*|Reminders.*|status)
	workspace = 4
	float = true
}

# KDE Plasma workaround for screen sharing
windowrule {
	name = xwayland-video-bridge-fixes
	match:class = xwaylandvideobridge
	no_initial_focus = true
	no_focus = true
	no_anim = true
	no_blur = true
	max_size = 1 1
	opacity = 0.0
}

windowrule {
	name = KDE Dialog
	match:class = org.kde.kdialog
	center = true
	float = true
}

windowrule {
	name = TUI apps in foot
	match:class = (nmtui|blueman|bluetui|battop)
	center = true
	float = true
}

# Waybar
layerrule {
	name = waybar
	match:namespace = waybar
	no_anim = on
	blur = off
	no_screen_share = on
}

# SwayNC / Notifications
layerrule {
	name = swaync
	match:namespace = (swaync-control-center|notifications)
	animation = slide
	blur = on
	no_screen_share = on
}
layerrule {
	name = swaynotifications
	match:namespace = (swaync-notification-window)
	animation = slide
	blur = on
	no_screen_share = on
}

# Wlogout
layerrule {
	name = wlogout
	match:namespace = logout_dialog
	animation = fade
	blur = on
	no_screen_share = on
}

# Launchers
layerrule {
	name = rofi
	match:namespace = (rofi|walker)
	animation = popin 90%
	blur = on
	no_screen_share = on
	}
