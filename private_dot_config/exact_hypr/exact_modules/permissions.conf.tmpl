# Screencopy
permission = /usr/bin/hyprshot, screencopy, allow
permission = /usr/(lib|libexec|lib64)/xdg-desktop-portal-hyprland, screencopy, allow

# Keyboards
permission = (video-bus|power-button|sleep-button|asus-wmi-hotkeys), keyboard, allow # Asus ROG Zephyrus G16
permission = ^(ite-tech.-inc.-ite-device)$, keyboard, allow
permission = compx-xlite-mini-wireless-keyboard, keyboard, allow
permission = logitech-mx-ergo, keyboard, allow
permission = ^(nuphy-nuphy-air75-he)$, keyboard, allow
permission = .*, keyboard, deny
