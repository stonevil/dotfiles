{{- /*
	vim:ft=conf.gotexttmpl
*/ -}}

# Cursor size
env = HYPRCURSOR_SIZE,24
env = XCURSOR_SIZE,24
env = QT_CURSOR_SIZE,24
env = RUST_BACKTRACE,1

# Force all apps to use Wayland
env = GDK_BACKEND,wayland,x11,*

env = QT_QPA_PLATFORM,wayland;xcb
env = QT_QPA_PLATFORMTHEME,qt6ct
env = QT_QPA_PLATFORMTHEME_QT6,qt6ct
# env = QT_QPA_PLATFORMTHEME,kde**.**
# env = QT_STYLE_OVERRIDE,Breeze Black
env = QT_AUTO_SCREEN_SCALE_FACTOR,1
env = QT_WAYLAND_DISABLE_WINDOWDECORATION,1

env = QT_QUICK_CONTROLS_STYLE,org.hyprland.style # Uses this style configuration

env = SDL_VIDEODRIVER,wayland
env = CLUTTER_BACKEND,wayland
env = GTK_THEME,Breeze-Dark

# env = WLR_NO_HARDWARE_CURSORS,1

env = _JAVA_AWT_WM_NONREPARENTING,1
env = MOZ_ENABLE_WAYLAND,1
# env = MOZ_DISABLE_RDD_SANDBOX,1
env = ELECTRON_OZONE_PLATFORM_HINT,wayland
env = OZONE_PLATFORM,wayland

# Allow better support for screen sharing (Google Meet, Discord, etc)
env = XDG_CURRENT_DESKTOP,Hyprland
env = XDG_SESSION_TYPE,wayland
env = XDG_SESSION_DESKTOP,Hyprland

env = XDG_MENU_PREFIX,arch-

# Screnshots location
env = HYPRSHOT_DIR,{{ joinPath .chezmoi.homeDir "Downloads" }}

# Use XCompose file
env = XCOMPOSEFILE,{{ joinPath .chezmoi.homeDir ".XCompose" }}

{{- if .tags.nvidia.enabled }}
env = GBM_BACKEND,nvidia-drm
env = __GLX_VENDOR_LIBRARY_NAME,nvidia
env = LIBVA_DRIVER_NAME,nvidia
{{- end }}
