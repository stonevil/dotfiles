	vim:ft=conf.gotexttmpl
*/ -}}

# https://wiki.hyprland.org/Configuring/Variables/#general
general {
	gaps_in = 2
	gaps_out = 2
	float_gaps = 2
	border_size = 1

	layout = master
	resize_on_border = true

	col.active_border = {{ print "0xff" .colours.normal.blue }}
	col.inactive_border = {{ print "0xff" .colours.normal.base }}
	col.nogroup_border_active = {{ print "0xff" .colours.normal.flamingo }}
	col.nogroup_border = {{ print "0xff" .colours.normal.base }}

	snap {
		enabled = true
	}
}

# https://wiki.hyprland.org/Configuring/Variables/#decoration
decoration {
	rounding = 0

	active_opacity = {{ .env.opacity }}
	inactive_opacity = {{ .env.opacityInactive }}
	fullscreen_opacity = {{ .env.opacity }}

	dim_inactive = {{ .env.dimInactive }}
	dim_strength = {{ .env.dimStrength }}

	shadow {
		enabled = false
	}

	# https://wiki.hyprland.org/Configuring/Variables/#blur
	blur {
		enabled = true
		new_optimizations = on
		special = true
		popups = true
	}
}

# https://wiki.hyprland.org/Configuring/Variables/#animations
animations {
	enabled = true

	# Default animations, see https://wiki.hyprland.org/Configuring/Animations/
	bezier = easeOutQuint,0.23,1,0.32,1
	bezier = easeInOutCubic,0.65,0.05,0.36,1
	bezier = linear,0,0,1,1
	bezier = almostLinear,0.5,0.5,0.75,1.0
	bezier = quick,0.15,0,0.1,1

	animation = global, 1, 10, default
	animation = border, 1, 5.39, easeOutQuint
	animation = windows, 1, 4.79, easeOutQuint
	animation = windowsIn, 1, 4.1, easeOutQuint, popin 87%
	animation = windowsOut, 1, 1.49, linear, popin 87%
	animation = fadeIn, 1, 1.73, almostLinear
	animation = fadeOut, 1, 1.46, almostLinear
	animation = fade, 1, 3.03, quick
	animation = layers, 1, 3.81, easeOutQuint
	animation = layersIn, 1, 4, easeOutQuint, fade
	animation = layersOut, 1, 1.5, linear, fade
	animation = fadeLayersIn, 1, 1.79, almostLinear
	animation = fadeLayersOut, 1, 1.39, almostLinear
	animation = workspaces, 0, 0, ease
}

group {
	col.border_active = {{ print "0x66" .colours.normal.blue }}
	col.border_inactive = {{ print "0x66" .colours.normal.base }}
	col.border_locked_active = {{ print "0x66" .colours.normal.flamingo }}
	col.border_locked_inactive = {{ print "0x66" .colours.normal.base }}

	groupbar {
		# text_color =
		# text_color_inactive =
		# text_color_locked_active =
		# text_color_locked_inactive =
		col.active = {{ print "0x66" .colours.normal.blue }}
		col.inactive = {{ print "0x66" .colours.normal.base }}
		col.locked_active = {{ print "0x66" .colours.normal.flamingo }}
		col.locked_inactive = {{ print "0x66" .colours.normal.base }}
		gaps_in = 2
		gaps_out = 2
		blur = true
	}
}

# See https://wiki.hyprland.org/Configuring/Master-Layout/
master {
	new_status = master
}

# https://wiki.hypr.land/Configuring/Dwindle-Layout/
dwindle {
	pseudotile = true
	preserve_split = yes
}

# https://wiki.hyprland.org/Configuring/Variables/#misc
misc {
	vfr = true
	disable_hyprland_logo = true
	disable_splash_rendering  = true
	focus_on_activate = true
	anr_missed_pings = 3
	allow_session_lock_restore = true
	background_color = {{ if .theme.blackout }}0x000000{{ else }}{{ print "0x" .colours.normal.background }}{{ end }}
}

# https://wiki.hypr.land/Configuring/Variables/#cursor
cursor {
	hide_on_key_press = false
}

xwayland {
	force_zero_scaling = true
}

# Don't show update on first launch
ecosystem {
	no_update_news = true
	no_donation_nag = true
	enforce_permissions = true
}
