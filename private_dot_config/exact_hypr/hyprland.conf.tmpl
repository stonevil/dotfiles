$mainMod = SUPER

# Define applications
$terminal = foot
$filemanager = dolphin
$fm = foot -e {{ (joinPath .chezmoi.homeDir ".local/bin/yazi") | quote }}
$browser = librewolf
$mail = thunderbird
$editor = nvim

$clipboard = walker --provider clipboard
$colourpicker = hyprpicker --autocopy --format=hex --quiet --lowercase-hex

$notifications = mako
$spotlight = walker
$screenlock = playerctl --all-players pause; hyprlock

$current_keymap = $(hyprctl devices -j | jq -r '.keyboards[] | select(.main == true) | first(.active_keymap)')

$volumeup = {{ (print (joinPath .chezmoi.homeDir ".config/wayland/scripts/audio") " " "up") }}
$volumedown = {{ print (joinPath .chezmoi.homeDir ".config/wayland/scripts/audio") " " "down" }}
$volumemute = {{ print (joinPath .chezmoi.homeDir ".config/wayland/scripts/audio") " " "toggle" }}

$micmute = {{ print (joinPath .chezmoi.homeDir ".config/wayland/scripts/audio") " " "micmute" }}

$backlightup = brightnessctl s +5%; notify-send --urgency=low --icon=monitor "$(brightnessctl g)"
$backlightdown = brightnessctl s 5%-; notify-send --urgency=low --icon=monitor "$(brightnessctl g)"

$toggledock = {{ joinPath .chezmoi.homeDir ".config/wayland/scripts/toggle_dock" }}

$logout = hyprctl dispatch exit
$logoutopts = wlogout


