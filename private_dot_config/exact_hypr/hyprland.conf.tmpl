{{- /*
	vim:ft=conf.gotexttmpl
*/ -}}

$mainMod = SUPER

# Define applications
$terminal = foot
$filemanager = dolphin
$filemanagerCli = foot yazi
$browser = librewolf
$mail = thunderbird
$editor = nvim

{{- if .tags.dms.enabled }}
$appsswitcher = dms ipc call hypr toggleOverview
$notifications = dms ipc call notifications toggle
$clipboard = dms ipc call clipboard toggle
$spotlight = dms ipc call spotlight toggle
$screenlock = dms ipc call lock lock

$volumeup = dms ipc call audio increment 5
$volumedown = dms ipc call audio decrement 5
$volumemute = dms ipc call audio mute

$backlightup = dms ipc call brightness increment 3 backlight:intel_backlight
$backlightdown = dms ipc call brightness decrement 3 backlight:intel_backlight
{{- else }}
$notifications = mako
$spotlight = walker
$screenlock = playerctl --all-players pause; hyprlock

$volumeup = {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/volume" }} --inc
$volumedown = {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/volume" }} --dec
$volumemute = {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/volume" }} --toggle

$backlightup = {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/backlight" }} --inc
$backlightdown = {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/backlight" }} --dec
{{- end }}

$micmute = {{ joinPath .chezmoi.homeDir ".config/hypr/scripts/volume" }} --toggle-mic
$logout = hyprctl dispatch exit


