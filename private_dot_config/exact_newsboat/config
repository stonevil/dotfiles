# Feed settings
auto-reload yes
reload-time 120
reload-threads 8
prepopulate-query-feeds yes
download-full-page yes
display-article-progress yes
keep-articles-days 30
scrolloff 5

# Bindings
unbind-key SPACE

unbind-key ESC
unbind-key LEFT
unbind-key DOWN
unbind-key UP
unbind-key RIGHT
unbind-key h
unbind-key j
unbind-key k
unbind-key l
unbind-key H
unbind-key L
unbind-key c
unbind-key y

bind-key SPACE macro-prefix

bind-key ESC quit
bind-key LEFT quit
bind-key DOWN down
bind-key UP up
bind-key RIGHT open
bind-key h quit
bind-key j down
bind-key k up
bind-key l open

bind-key H prev-feed
bind-key L next-feed
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key a toggle-article-read
bind-key c toggle-show-read-feeds

# Browsers
browser "$BROWSER %u"
macro p set browser "$MEDIAPLAYER %u &"; open-in-browser-noninteractively; toggle-article-read "read"; set browser "$BROWSER %u"
macro d set browser "nohup yd.sh -d %u & disown -a"; open-in-browser-noninteractively; toggle-article-read "read"; set browser "$BROWSER %u"
macro m set browser "nohup yd.sh -m %u & disown -a"; open-in-browser-noninteractively; toggle-article-read "read"; set browser "$BROWSER %u"
macro c set browser "nohup echo %u | pbcopy & disown -a"; open-in-browser-noninteractively; toggle-article-read "read"; set browser "$BROWSER %u"

# Rules of Engagement
ignore-mode "display"
ignore-article "*" "tags !# \"youtube\" and (title # \"(lgbtq|LGBTQ|lgbt|LGBT|transgender)\")"

# Colors
color background default default
color listnormal default default
color listfocus_unread black yellow standout bold
color listfocus black yellow standout bold
color listnormal_unread blue default
color article default default
color info blue default bold

highlight all "--.*---" default

highlight feedlist ".*(0/0))" black

highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default

highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default
