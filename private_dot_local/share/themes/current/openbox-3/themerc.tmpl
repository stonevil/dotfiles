# Menu
menu.overlap.x: 0
menu.overlap.y: 0
menu.border.width: 6
menu.separator.width: 1
menu.separator.padding.width: 10
menu.separator.padding.height: 2

menu.border.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
menu.separator.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background | quote }}{{ end }}

menu.title.bg: flat solid
menu.title.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
menu.title.text.color: {{ print "#" .colours.normal.subtext0 }}
menu.title.text.justify: left

menu.items.bg: flat solid
menu.items.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}

menu.items.text.color: {{ print "#" .colours.bright.foreground }}

menu.items.active.bg: flat solid
menu.items.active.bg.color: {{ print "#" .colours.normal.surface1 }}
menu.items.active.text.color: {{ print "#" .colours.normal.foreground }}
menu.items.disabled.text.color: {{ print "#" .colours.normal.overlay1 }}
menu.items.active.disabled.text.color: {{ print "#" .colours.normal.overlay1 }}

# OSD
osd.border.width: 1

osd.bg: flat solid
osd.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}

osd.border.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}

osd.label.bg: flat solid
osd.label.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
osd.label.text.color: #a6adc8

osd.hilight.bg: flat solid
osd.hilight.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}

osd.unhilight.bg: flat solid
osd.unhilight.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}

# Window
border.width: 1
padding.width: 10
padding.height: 10
window.handle.width: 0
window.client.padding.width: 0
window.client.padding.height: 0

window.label.text.justify: left

window.active.label.bg: flat solid
window.active.label.bg.color: {{ print "#" .colours.normal.crust }}
window.active.label.text.color: {{ print "#" .colours.normal.white }}

window.inactive.label.bg: flat solid
window.inactive.label.bg.color: {{ print "#" .colours.normal.crust }}
window.inactive.label.text.color: {{ print "#" .colours.normal.white }}

window.active.border.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
window.active.client.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
window.inactive.border.color: {{ print "#" .colours.normal.base }}
window.inactive.client.color: {{ print "#" .colours.normal.base }}

window.active.title.bg: flat solid
window.active.title.bg.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}
window.active.title.separator.color: {{ if .theme.blackout }}#000000{{ else }}{{ print "#" .colours.normal.background }}{{ end }}

window.inactive.title.bg: flat solid
window.inactive.title.bg.color: {{ print "#" .colours.normal.crust }}
window.inactive.title.separator.color: {{ print "#" .colours.normal.crust }}

