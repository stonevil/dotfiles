cd "$HOME" || exit 1

if command -v krew >/dev/null; then
	echo "Install kubectl krew packages"
	if [[ -f {{ joinPath .chezmoi.sourceDir ".packagefiles/krew.packages" | quote }} ]] && [[ -s {{ joinPath .chezmoi.sourceDir ".packagefiles/krew.packages" | quote }} ]]; then
		export KREW_ROOT="$HOME/.local/krew"
		krew install <{{ joinPath .chezmoi.sourceDir ".packagefiles/krew.packages" | quote }}
	fi
fi
